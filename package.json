    "@fastify/compress": "^6.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.11.2",
    "@nestjs/config": "^3.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "fastify": "^4.24.0",
    "fastify-compress": "^4.1.0",
    "fastify-helmet": "^7.1.0",
    "fastify-static": "^4.7.0",
    "mercadopago": "^2.0.1",
    "mysql2": "^3.6.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
